<?xml version="1.0"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="mc_reduction">
    <metadata>
        <displayName>MC Risk and Reduction</displayName>
        <category>Form</category>
        <description>This module adds several indicators specific to the MC and Risk Reduction part</description>
        <creator>Jhpeigo Lesotho</creator>
        <email>Moipone.Mphahlela@jhpiego.org</email>
        <version>4.1.1</version>
        <requirement name='Person'>
            <atLeast version='4.1'/>
            <lessThan version='4.2'/>
        </requirement>
        <path name='templates'>
            <value>./templates</value>
        </path>
        <priority>300</priority>
    </metadata>
    <!--end of metadata -->
    <!--start: configuring forms and fields-->
    <configurationGroup name='mc_reduction' path='/'>
        <status>overwrite:true</status> <!-- need for development phase -->

        <!-- omitting the optional functionality as I won't need to use lists as yet -->

        <!-- Form: the vmmc_form that will use VMMC class -->
        <configurationGroup name='forms' path='/modules/forms/forms'>
            <configurationGroup name='mc_reduction_form'>    <!-- This is the form that is intended to hold fields -->
                <configuration name='class' values='single'>
                    <value>I2CE_SimpleList</value>  <!-- I'm not sure about this. I don't understand this part -->
                </configuration>
                <configuration name='display' values='single'>
                    <value>MC Reduction Form</value>
                </configuration>
            </configurationGroup>

            <configurationGroup name='person'>
                <configuration name='class'>
                    <value>mcReduction</value>     <!-- the MCR class -->
                </configuration>
            </configurationGroup>
        </configurationGroup>
        <!--End of Form-->

        <!--Classes-->
        <configurationGroup name='formClasses' path='/modules/forms/formClasses'>
            <configurationGroup name='mcReduction'>          <!-- The VMMC class here-->
                <configuration name='extends'>        <!-- extends -->
                    <value>iHRIS_ManagePerson</value> <!-- the class iHRIS_ManagePerson -->
                </configuration>
                <configurationGroup name='fields'>

                    <!--Client Tested -->
                    <configurationGroup name="client_tested">
                        <displayName>The field 'marital_status'</displayName>
                        <version>3.2.5</version>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>BOOLEAN</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.1</version>
                            <value>default:Client Tested?</value>
                        </configuration>
                    </configurationGroup>
                    <!--Client Tested-->

                    <!--Where?-->
                    <configurationGroup name="tested_where">
                        <displayName>The field 'tested_where'</displayName>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>STRING_TEXT</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.4</version>
                            <value>default:Where</value>
                        </configuration>
                    </configurationGroup>
                    <!--Where?-->

                    <!--Date of HIV Testing-->
                    <configurationGroup name="date_of_hiv_testing">
                        <displayName>The field 'date_of_hiv_testing'</displayName>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>DATE_YMD</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.1</version>
                            <value>default:Date of HIV Testing</value>
                        </configuration>
                        <configuration name="default_eval"> <!--I don't know what an eval is-->
                            <displayName>The default value for this field as an eval string</displayName>
                            <value>I2CE_Date::blank()</value>
                        </configuration>
                    </configurationGroup>
                    <!--Date of HIV Testing-->

                    <!--Test Results-->
                    <configurationGroup name="test_results">
                        <displayName>The field 'test_results'</displayName>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>MAP</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.4</version>
                            <value>default:Test Results</value>
                        </configuration>
                    </configurationGroup>
                    <!--Where?-->

                    <!--Client declined -->
                    <configurationGroup name="client_declined">
                        <displayName>The field 'client_declined'</displayName>
                        <version>3.2.5</version>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>BOOLEAN</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.1</version>
                            <value>default:Client Declined?</value>
                        </configuration>
                    </configurationGroup>
                    <!--Client Tested-->

                </configurationGroup>
            </configurationGroup>
        </configurationGroup>
    </configurationGroup>
    <!--End of Class-->
</I2CEConfiguration>