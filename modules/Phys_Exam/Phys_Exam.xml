<?xml version="1.0"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="phys_exam">
    <metadata>
        <displayName>Physical Examination</displayName>
        <category>Form</category>
        <description>This module adds several indicators specific to for the Physical Examination indicators</description>
        <creator>Jhpeigo Lesotho</creator>
        <email>Moipone.Mphahlela@jhpiego.org</email>
        <version>4.1.0</version>
        <requirement name='Person'>
            <atLeast version='4.1'/>
            <lessThan version='4.2'/>
        </requirement>
        <path name='templates'>
            <value>./templates</value>
        </path>
        <priority>300</priority>
    </metadata>
    <!--end of metadata -->
    <!--start: configuring forms and fields-->
    <configurationGroup name='med_history' path='/'>
        <status>overwrite:true</status> <!-- need for development phase -->

        <!-- omitting the optional functionality as I won't need to use lists as yet -->

        <!-- Form: the vmmc_form that will use VMMC class -->
        <configurationGroup name='forms' path='/modules/forms/forms'>
            <configurationGroup name='physexam_form'>    <!-- This is the form that is intended to hold fields -->
                <configuration name='class' values='single'>
                    <value>I2CE_SimpleList</value>  <!-- I'm not sure about this. I don't understand this part -->
                </configuration>
                <configuration name='display' values='single'>
                    <value>Physical Examination Form</value>
                </configuration>
            </configurationGroup>

            <configurationGroup name='person'>
                <configuration name='class'>
                    <value>physExam</value>     <!-- the physExam class -->
                </configuration>
            </configurationGroup>
        </configurationGroup>
        <!--End of Form-->

        <!--Classes-->
        <configurationGroup name='formClasses' path='/modules/forms/formClasses'>
            <configurationGroup name='physExam'>          <!-- The medHistory class here-->
                <configuration name='extends'>        <!-- extends -->
                    <value>iHRIS_ManagePerson</value> <!-- the class iHRIS_ManagePerson -->
                </configuration>
                <configurationGroup name='fields'>

                    <!--Paraphymosis -->
                    <configurationGroup name="paraphymosis">
                        <displayName>The field 'paraphymosis'</displayName>
                        <version>3.2.5</version>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>BOOLEAN</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.1</version>
                            <value>default:Paraphymosis</value>
                        </configuration>
                    </configurationGroup>
                    <!--Paraphymosis-->

                    <!--Urethral Discharge -->
                    <configurationGroup name="urethral_discharge">
                        <displayName>The field 'urethral_discharge'</displayName>
                        <version>3.2.5</version>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>BOOLEAN</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.1</version>
                            <value>default:Urethral Discharge</value>
                        </configuration>
                    </configurationGroup>
                    <!--Urethral Discharge-->

                    <!--Hypo/Hyper Spadias -->
                    <configurationGroup name="hh_spadias">
                        <displayName>The field 'hh_spadias'</displayName>
                        <version>3.2.5</version>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>BOOLEAN</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.1</version>
                            <value>default:Hypo_Hyper Spadias</value>
                        </configuration>
                    </configurationGroup>
                    <!--Hypo/Hyper Spadias-->

                    <!--Swelling of Scrotum -->
                    <configurationGroup name="scrotum">
                        <displayName>The field 'scrotum'</displayName>
                        <version>3.2.5</version>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>BOOLEAN</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.1</version>
                            <value>default:Swelling of Scrotum</value>
                        </configuration>
                    </configurationGroup>
                    <!--Swelling of Scrotum-->

                    <!--Genital Ulcers -->
                    <configurationGroup name="genital_ulcers">
                        <displayName>The field 'genital_ulcers'</displayName>
                        <version>3.2.5</version>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>BOOLEAN</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.1</version>
                            <value>default:Genital Ulcers</value>
                        </configuration>
                    </configurationGroup>
                    <!--Swelling of Scrotum-->

                    <!--Penile Warts -->
                    <configurationGroup name="penile_warts">
                        <displayName>The field 'penile_warts'</displayName>
                        <version>3.2.5</version>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>BOOLEAN</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.1</version>
                            <value>default:Penile Warts</value>
                        </configuration>
                    </configurationGroup>
                    <!--Swelling of Scrotum-->

                    <!--Phymosis -->
                    <configurationGroup name="phymosis">
                        <displayName>The field 'phymosis'</displayName>
                        <version>3.2.5</version>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>BOOLEAN</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.1</version>
                            <value>default:Phymosis</value>
                        </configuration>
                    </configurationGroup>
                    <!--Swelling of Scrotum-->

                    <!--Erectile Dysfunction -->
                    <configurationGroup name="erectile_dysfunction">
                        <displayName>The field 'erectile_dysfunction'</displayName>
                        <version>3.2.5</version>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>BOOLEAN</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.1</version>
                            <value>default:Erectile Dysfunction</value>
                        </configuration>
                    </configurationGroup>
                    <!--Swelling of Scrotum-->
                </configurationGroup>
            </configurationGroup>
        </configurationGroup>
    </configurationGroup>
    <!--End of Class-->
</I2CEConfiguration>