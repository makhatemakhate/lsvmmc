<?xml version="1.0"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="vmmc_fun">
    <metadata>
        <displayName>VMMC Fields</displayName>
        <category>Form</category>
        <description>This module adds several indicators specific to the VMMC exercise</description>
        <creator>Jhpeigo Lesotho</creator>
        <email>Moipone.Mphahlela@jhpiego.org</email>
        <version>4.1.0</version>
        <requirement name='Person'>
            <atLeast version='4.1'/>
            <lessThan version='4.2'/>
        </requirement>
        <path name='templates'>
            <value>./templates</value>
        </path>
        <priority>300</priority>
    </metadata>
    <!--end of metadata -->
    <!--start: configuring forms and fields-->
    <configurationGroup name='vmmc_fun' path='/'>
        <status>overwrite:true</status> <!-- need for development phase -->

        <!-- omitting the optional functionality as I won't need to use lists as yet -->

        <!-- Form: the vmmc_form that will use VMMC class -->
        <configurationGroup name='forms' path='/modules/forms/forms'>
            <configurationGroup name='vmmc_form'>    <!-- This is the form that is intended to hold fields -->
                <configuration name='class' values='single'>
                    <value>I2CE_SimpleList</value>  <!-- I'm not sure about this. I don't understand this part -->
                </configuration>
                <configuration name='display' values='single'>
                    <value>VMMC Form</value>
                </configuration>
            </configurationGroup>

            <configurationGroup name='person'>
                <configuration name='class'>
                    <value>VMMC</value>     <!-- the VMMC class -->
                </configuration>
            </configurationGroup>
        </configurationGroup>
        <!--End of Form-->

        <!--Classes-->
        <configurationGroup name='formClasses' path='/modules/forms/formClasses'>
            <configurationGroup name='VMMC'>          <!-- The VMMC class here-->
                <configuration name='extends'>        <!-- extends -->
                    <value>iHRIS_ManagePerson</value> <!-- the class iHRIS_ManagePerson -->
                </configuration>
                <configurationGroup name='fields'>

                    <configurationGroup name='date_of_visit'>
                        <configuration name='formfield'>
                            <displayName>The form field type</displayName>
                            <value>DATE_YMD</value>
                        </configuration>
                        <configuration name='headers' type='delimited' values='many'>
                            <value>default:Date of Visit</value> <!--I'm guessing this is what will reflect before dates is inserted-->
                        </configuration>
                    </configurationGroup>
                    <!--end of date of date_of_visit-->

                    <!--I copied this field from somewhere -->
                    <configurationGroup name="birth_date">
                        <displayName>The field 'birth_date'</displayName>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>DATE_YMD</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.1</version>
                            <value>default:Date of Birth</value>
                        </configuration>
                        <configuration name="default_eval"> <!--I don't know what an eval is-->
                            <displayName>The default value for this field as an eval string</displayName>
                            <value>I2CE_Date::blank()</value>
                        </configuration>
                    </configurationGroup>
                    <!--end of birth_date-->

                    <!--I copied this field from somewhere -->
                    <configurationGroup name="marital_status">
                        <displayName>The field 'marital_status'</displayName>
                        <version>3.2.5</version>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>MAP</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.1</version>
                            <value>default:Marital Status</value>
                        </configuration>
                    </configurationGroup>
                    <!--end of marital_status-->

                </configurationGroup>
            </configurationGroup>
        </configurationGroup>
    </configurationGroup>
    <!--End of Class-->
</I2CEConfiguration>