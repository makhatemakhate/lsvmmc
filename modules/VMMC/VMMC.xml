<?xml version="1.0"?>       
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="VMMC">
 <metadata>
   <displayName>VMMC Fields</displayName>
   <category>Form</category>
   <description>This module adds several indicators for specific to the VMMC exercise</description>
   <creator>Jhpeigo Lesotho</creator>
   <email>Moipone.Mphahlela@jhpiego.org</email>
   <version>4.1.0</version> 
   <requirement name='Person'>
     <atLeast version='4.1'/>
     <lessThan version='4.2'/>
   </requirement>
   <path name='templates'>
      <value>./templates</value>
   </path>
   <priority>300</priority>  
 </metadata>

<configurationGroup name="VMMC" path="/">
    <status>overwrite:true</status>

    <!-- Optional Functionality -->
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description">
        <configuration name="can_edit_database_list_marital_status">
            <value>Edit Marital Status</value>
        </configuration>
        <configuration name="can_view_database_marital_status">
            <value>View the training course status list</value>
        </configuration>
    </configurationGroup>
    <configurationGroup name="tasks_trickle_down" path="/I2CE/tasks/task_trickle_down">
        <configuration name="can_view_database_list_marital_status" values="many">
            <value>can_view_database_lists</value>
        </configuration>
        <configuration name="can_edit_database_list_marital_status" values="many">
            <value>can_view_database_list_marital_status</value>
            <value>can_edit_database_lists</value>
        </configuration>
    </configurationGroup>
    <configurationGroup name="role_trickle_down" path="/I2CE/tasks/role_trickle_down">
        <configuration name="training_manager" values="many">
            <status>uniquemerge:true</status>
            <value>can_edit_database_list_marital_status</value>
        </configuration>
    </configurationGroup>
    <!-- End: Optional Functionality -->

    <!-- Definition of Magic data forms -->
    <configurationGroup name="forms" path="/modules/forms/forms">
        <configuration name="class" values="single">
            <value>I2CE_SimpleList</value>
        </configuration>
        <configuration name="display" values="single">
            <value>Marital Status</value>
        </configuration>
    </configurationGroup>
    <configurationGroup name="person">
        <configuration name="class">
            <value>VMMC</value>
        </configuration>
    </configurationGroup>
    <!--End of definition for Magic data forms-->

    <configurationGroup name="formClasses" path="modules/forms/formClasses">
        <configuration name="extends">
            <value>iHRIS_ManagePerson</value>
        </configuration>
        <configurationGroup name="fields">
            <configurationGroup name="date_of_birth">
                <configuration name="formfield">
                    <value>DATE_YMD</value>
                </configuration>
                <configuration name="headers" type="delimited" values="many">
                    <value>default:Date Of Birth</value>
                </configuration>
            </configurationGroup>
            <configurationGroup name='marital_status'>
                <configuration name="formfield">
                    <value>MAP</value>
                </configuration>
                <configuration name="headers" type="delimited" values="many">
                    <value>default:Marital Status</value>
                </configuration>
            </configurationGroup>
            <configurationGroup name="date_of_visit">
                <configuration name="formfield">
                    <value>DATE_YMD</value>
                </configuration>
                <configuration name="headers" type="delimited" values="many">
                    <value>default:Date Of Visit</value>
                </configuration>
            </configurationGroup>
        </configurationGroup>
    </configurationGroup>
</configurationGroup>
</I2CEConfiguration>