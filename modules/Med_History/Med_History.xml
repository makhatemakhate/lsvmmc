<?xml version="1.0"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="med_history">
    <metadata>
        <displayName>Medical History</displayName>
        <category>Form</category>
        <description>This module adds several indicators specific to for the Medical History indicators</description>
        <creator>Jhpeigo Lesotho</creator>
        <email>Moipone.Mphahlela@jhpiego.org</email>
        <version>4.1.2</version>
        <requirement name='Person'>
            <atLeast version='4.1'/>
            <lessThan version='4.2'/>
        </requirement>
        <path name='templates'>
            <value>./templates</value>
        </path>
        <priority>300</priority>
    </metadata>
    <!--end of metadata -->
    <!--start: configuring forms and fields-->
    <configurationGroup name='med_history' path='/'>
        <status>overwrite:true</status> <!-- need for development phase -->

        <!-- omitting the optional functionality as I won't need to use lists as yet -->

        <!-- Form: the vmmc_form that will use VMMC class -->
        <configurationGroup name='forms' path='/modules/forms/forms'>
            <configurationGroup name='medhis_form'>    <!-- This is the form that is intended to hold fields -->
                <configuration name='class' values='single'>
                    <value>I2CE_SimpleList</value>  <!-- I'm not sure about this. I don't understand this part -->
                </configuration>
                <configuration name='display' values='single'>
                    <value>Medical History Form</value>
                </configuration>
            </configurationGroup>

            <configurationGroup name='person'>
                <configuration name='class'>
                    <value>medHistory</value>     <!-- the medHistory class -->
                </configuration>
            </configurationGroup>
        </configurationGroup>
        <!--End of Form-->

        <!--Classes-->
        <configurationGroup name='formClasses' path='/modules/forms/formClasses'>
            <configurationGroup name='medHistory'>          <!-- The medHistory class here-->
                <configuration name='extends'>        <!-- extends -->
                    <value>iHRIS_ManagePerson</value> <!-- the class iHRIS_ManagePerson -->
                </configuration>
                <configurationGroup name='fields'>

                    <!--Client Circumcised -->
                    <configurationGroup name="client_circumcised">
                        <displayName>The field 'client_circumcised'</displayName>
                        <version>3.2.5</version>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>BOOLEAN</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.1</version>
                            <value>default:Client Circumcised</value>
                        </configuration>
                    </configurationGroup>
                    <!--Client Circumcised-->

                    <!--Circumcised Where?-->
                    <configurationGroup name="circumcised_where">
                        <displayName>The field 'circumcised_where'</displayName>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>STRING_TEXT</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.4</version>
                            <value>default:Circumcised Where</value>
                        </configuration>
                    </configurationGroup>
                    <!--Circumcised Where?-->

                    <!--Any STIs -->
                    <configurationGroup name="any_sti">
                        <displayName>The field 'any_sti'</displayName>
                        <version>3.2.5</version>
                        <configuration name="formfield">
                            <displayName>The form field type</displayName>
                            <value>BOOLEAN</value>
                        </configuration>
                        <configuration name="headers" type="delimited" locale="en_US">
                            <displayName>The headers for this field.</displayName>
                            <version>3.2.1</version>
                            <value>default:Any STIs</value>
                        </configuration>
                    </configurationGroup>
                    <!--Client Circumcised-->

                </configurationGroup>
            </configurationGroup>
        </configurationGroup>
    </configurationGroup>
    <!--End of Class-->
</I2CEConfiguration>